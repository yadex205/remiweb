<!DOCTYPE html>
<html>
<head>
	<% include common/_meta %>
	<link rel="stylesheet" href="{{ base }}/css/pages/news.css">
	<title>れーみ&#x2606; - News</title>
</head>
<body>
	<% include common/_header %>
	<section class="main-content">
		<div>
			<a href="{{ base }}/">top</a> <i class="fa fa-caret-right fa-lg"></i> news
		</div>
		{% for post in site.posts %}
		{% if post.category == "news" %}
			<article class="post">
				<div class="date">
					{{ post.date | date: '%Y.%m.%d'}}
				</div>
				<div class="text">
					<div class="title">
						<a href="{{ base }}{{ post.url }}">{{ post.title }}</a>
					</div>
					<div class="content">
						{{ post.content }}
					</div>
				</div>
			</article>
		{% endif %}
		{% endfor %}
	</section>
	<% include common/_footer %>
</body>
</html>