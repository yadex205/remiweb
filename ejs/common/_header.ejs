<div id="fb-root"></div>
<header id="top" class="main-header">
	<div class="title">
		<img src="{{ page.url | ptr }}/image/id_logo.svg" alt="logo">
		<span class="subtitle">official website</span>
	</div>
	<div class="menu">
		<a href="{{ page.url | ptr }}/"
			{% if page.name contains "index" %}
			class="current"
			{% endif %}
			>top</a>
		<a href="{{ page.url | ptr }}/news/"
			{% if page.name contains "news" %}
			class="current"
			{% endif %}
			>news</a>
		<a href="{{ page.url | ptr }}/live"
			{% if page.name contains "live" %}
			class="current"
			{% endif %}
			>live</a>
		<a href="{{ page.url | ptr }}/discography"
			{% if page.name contains "discography" %}
			class="current"
			{% endif %}
			>disco<br />graphy</a>
		<a href="{{ page.url | ptr }}/biography"
			{% if page.name contains "biography" %}
			class="current"
			{% endif %}
			>biography</a>
		<a href="http://ameblo.jp/remiriya27/"
			target="_blank">blog <i class="fa fa-external-link-square"></i></a>
		<a href="{{ page.url | ptr }}/contact"
			{% if page.name contains "contact" %}
			class="current"
			{% endif %}
			>contact</a>
	</div>
</header>